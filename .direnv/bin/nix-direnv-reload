#!/usr/bin/env bash
set -e
if [[ ! -d "/home/anon/.ghr/github.com/pipelight/wlr-which-key" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/anon/.ghr/github.com/pipelight/wlr-which-key")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/anon/.ghr/github.com/pipelight/wlr-which-key" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/anon/.ghr/github.com/pipelight/wlr-which-key/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/anon/.ghr/github.com/pipelight/wlr-which-key/.envrc" "/home/anon/.ghr/github.com/pipelight/wlr-which-key/.direnv"/*.rc
